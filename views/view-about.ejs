<!DOCTYPE html>
<html>
<head>
  <title>About</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #22223b, #4a4e69 65%);
      min-height: 100vh;
      color: #232946;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px 0;
    }
    .container {
      max-width: 850px;
      width: 97%;
      background: #f7f7fb;
      border-radius: 18px;
      box-shadow: 0 6px 36px rgba(34,34,59,0.07);
      padding: 36px 22px;
      margin: 0 auto;
    }
    h1 {
      font-size: 2.3rem;
      font-weight: 700;
      margin-bottom: 22px;
      color: #22223b;
      text-align: center;
      letter-spacing: 2px;
    }
    .nav-links {
      margin-bottom: 18px;
      text-align: center;
    }
    .nav-links a {
      color: #4f8cff;
      text-decoration: none;
      font-weight: 600;
      margin: 0 14px;
      border-bottom: 2px solid transparent;
      transition: color 0.2s, border-color 0.2s;
      font-size: 1.1rem;
    }
    .nav-links a:hover {
      color: #22223b;
      border-color: #4f8cff;
    }
    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 9px;
      margin-top: 14px;
    }
    th, td {
      padding: 14px 10px;
      text-align: left;
      background: #fff;
      border-bottom: 1.5px solid #e0e4ea;
      font-size: 1rem;
    }
    th {
      background: #e9ecef;
      font-weight: 600;
      color: #232946;
      border-bottom: 2px solid #bfc6d0;
    }
    tr:last-child td {
      border-bottom: none;
    }
    .action-buttons {
      display: flex;
      gap: 10px;
    }
    button, a.button, a.edit {
      padding: 7px 18px;
      border: none;
      border-radius: 7px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.18s, transform 0.11s;
      outline: none;
    }
    button.delete {
      background: #e63946;
      color: #fff;
    }
    button.delete:hover {
      background: #9b2226;
      transform: translateY(-2px);
    }
    a.edit {
      background: #4f8cff;
      color: #fff;
      display: inline-block;
    }
    a.edit:hover {
      background: #22223b;
      color: #fff;
      transform: translateY(-2px);
    }
    @media (max-width: 700px) {
      .container { padding: 12px 2vw; }
      h1 { font-size: 1.35rem; }
      th, td { font-size: 0.93rem; padding: 9px 3px; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>About</h1>
    <div class="nav-links">
      <a href="/">Home</a> | <a href="/api/about/create">Add About</a> | <a href="/api/about/json">JSON View</a>
    </div>
    <table>
      <tr>
        <th>Content</th>
        <th>Actions</th>
      </tr>
      <% abouts.forEach(function(about) { %>
        <tr>
          <td><%= about.content %></td>
          <td class="action-buttons">
            <form action="/api/about/delete/<%= about._id %>" method="POST" style="display:inline">
              <button type="submit" class="delete" onclick="return confirm('Delete this about entry?')">Delete</button>
            </form>
            <a href="/api/about/edit/<%= about._id %>" class="edit">Edit</a>
          </td>
        </tr>
      <% }); %>
    </table>
  </div>
</body>
</html>
