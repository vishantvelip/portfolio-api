<!DOCTYPE html>
<html>
<head>
  <title><%= project._id ? 'Edit' : 'Add' %> Project</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #22223b, #4a4e69 65%);
      min-height: 100vh;
      color: #232946;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px 0;
    }
    .container {
      max-width: 600px;
      width: 97%;
      background: #f7f7fb;
      border-radius: 18px;
      box-shadow: 0 6px 36px rgba(34,34,59,0.08);
      padding: 36px 22px;
      margin: 0 auto;
    }
    h2 {
      font-size: 1.8rem;
      font-weight: 700;
      color: #22223b;
      margin-bottom: 24px;
      text-align: center;
    }
    .message {
      color: #e63946;
      text-align: center;
      margin-bottom: 18px;
      font-weight: 500;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 23px;
    }
    label {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 6px;
      display: block;
      color: #4a4e69;
    }
    input[type="text"], input[type="url"], textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #e0e4ea;
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.18s, box-shadow 0.18s;
    }
    input[type="text"]:focus, input[type="url"]:focus, textarea:focus {
      border-color: #4f8cff;
      box-shadow: 0 0 0 2px #4f8cff22;
      outline: none;
    }
    textarea {
      min-height: 90px;
      resize: vertical;
    }
    input[type="file"] {
      padding: 8px;
      font-size: 1rem;
    }
    img {
      border-radius: 8px;
      margin: 10px 0;
      max-width: 100px;
      background: #e0e4ea;
    }
    .form-buttons {
      display: flex;
      gap: 13px;
      justify-content: center;
    }
    button, a.button {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.2s, transform 0.1s;
      background: #4f8cff;
      color: #fff;
    }
    button:hover {
      background: #22223b;
      color: #fff;
      transform: translateY(-2px);
    }
    a.button {
      background: #6b7280;
      color: #fff;
    }
    a.button:hover {
      background: #232946;
      color: #fff;
      transform: translateY(-2px);
    }
    @media (max-width: 700px) {
      .container { padding: 12px 3vw; }
      h2 { font-size: 1.22rem; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2><%= project._id ? 'Edit' : 'Add' %> Project</h2>
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <form action="<%= project._id ? ('/api/projects/update/' + project._id) : '/api/projects/create' %>" method="POST" enctype="multipart/form-data">
      <label>Name:<br><input type="text" name="name" value="<%= project.name || '' %>" required/></label>
      <label>Title:<br><input type="text" name="title" value="<%= project.title || '' %>" required/></label>
      <label>Description:<br><textarea name="description" required><%= project.description || '' %></textarea></label>
      <label>Project URL:<br><input type="url" name="projectsUrl" value="<%= project.projectsUrl || '' %>" required/></label>
      <label>Image:<br><input type="file" name="projectImg" accept="image/*"/></label>
      <% if (project.projectImg) { %>
        <img src="https://portfolio-api-epzm.onrender.com/<%= project.projectImg %>" alt="Project Image" onerror="this.src='https://via.placeholder.com/100';"/>
      <% } %>
      <div class="form-buttons">
        <button type="submit">Submit</button>
        <a href="/api/projects/view" class="button">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>
